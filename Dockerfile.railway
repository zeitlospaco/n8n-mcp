# ---- Base Node image ----
FROM node:20-alpine

# ---- App Directory ----
WORKDIR /app

# ---- Copy package.json & install deps ----
COPY package*.json ./
RUN npm install --production

# ---- Copy project files ----
COPY . .

# ---- Environment ----
ENV NODE_ENV=production
ENV PORT=3000

# ---- Expose port ----
EXPOSE 3000

# ---- Start server ----
CMD ["node", "server.js"]