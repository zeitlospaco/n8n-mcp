name: Sync Upstream
on:
  schedule:
    - cron: '0 3 * * *'  # Jeden Tag um 03:00 UTC
  workflow_dispatch:     # Manuell startbar im Actions-Tab

jobs:
  sync:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout fork
        uses: actions/checkout@v4
        with:
          persist-credentials: false

      - name: Configure Git
        run: |
          git config user.name "github-actions[bot]"
          git config user.email "github-actions[bot]@users.noreply.github.com"

      - name: Add upstream and fetch
        run: |
          git remote add upstream https://github.com/vredrick/n8n-mcp.git
          git fetch upstream
          git merge upstream/main --allow-unrelated-histories --no-edit || true
          git push origin main
